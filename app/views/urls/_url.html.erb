<div class="ml-5">
  <% if current_user %>
    <h2 class="fw-bold my-title mt-5 fs-1">Your Links</h2>
    <ul class="list d-flex gap-4 mb-5 justify-conten-start align-items-center">
      <h4>Shortened link</h4>
      <li class="link"><a class='link-as-text' target='_blank' href='<%= urls_path(action: :show, controller: :urls, short_url: url.short_url, only_path: false) %>'></a></li>
      <li class="link"><%= link_to url.short_url, target: "_blank", rel: "nofollow" %></li>

      <h4>Original link</h4>
      <li class="link"><%= link_to url.long_url, target: "_blank", rel: "nofollow" %></li>
    </ul>
  <% end %>
</div>