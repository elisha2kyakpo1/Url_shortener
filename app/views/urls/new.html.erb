<%= flash[:error] %>
<% if !current_user %>
  <p>Need to Sign up or login to shorten your link!</p>
<% end %>
<div class="d-flex align-items-center justify-content-around mx-5">
  <%= render "layouts/menu_bar" %>
  <%= form_with model: @link, html: {class: "form"} do |form| %>
    <div class="d-flex">
      <%= form.text_field :long_url, placeholder: "Enter or paste your link here...", class: "form-control" %>
      <%= form.submit "Shorten", class:"shorten" %>
    </div>
  <% end %>
</div>
<%= @most_clicked %>